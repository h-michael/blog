---
// Remove current url path and remove trailing slash if exists
const currentUrlPath = Astro.url.pathname.replace(/\/+$/, "");

// Get url array from path
// eg: /blog/tags/tailwindcss => ['blog', 'tags', 'tailwindcss']
const breadcrumbList = currentUrlPath.split("/").slice(1);

// if breadcrumb is Home > Blog > Posts > 1 <etc>
// replace page number with Posts (page number)
if (breadcrumbList[0] === "blog" && breadcrumbList[1] === "posts" && !isNaN(Number(breadcrumbList[2]))) {
  breadcrumbList.splice(2, 1, `(page ${breadcrumbList[2]})`);
}

// if breadcrumb is Home > Blog > Tags > [tag] > [page] <etc>
// replace [page] with (page number)
if (breadcrumbList[0] === "blog" && breadcrumbList[1] === "tags" && !isNaN(Number(breadcrumbList[3]))) {
  breadcrumbList.splice(
    3,
    1,
    `${Number(breadcrumbList[3]) === 1 ? "" : "(page " + breadcrumbList[3] + ")"}`
  );
}
---

<nav class="mx-auto mt-8 mb-1 w-full max-w-app px-4" aria-label="breadcrumb">
  <ul
    class="font-light [&>li]:inline [&>li:not(:last-child)>a]:hover:opacity-100"
  >
    <li>
      <a href="/" class="opacity-80">Home</a>
      <span aria-hidden="true" class="opacity-80">&raquo;</span>
    </li>
    {
      breadcrumbList.map((breadcrumb, index) =>
        index + 1 === breadcrumbList.length ? (
          <li>
            <span
              class:list={["capitalize opacity-75", { lowercase: index > 1 }]}
              aria-current="page"
            >
              {/* make the last part lowercase in Home > Blog > Tags > some-tag */}
              {decodeURIComponent(breadcrumb)}
            </span>
          </li>
        ) : (
          <li>
            <a href={`/${breadcrumbList.slice(0, index + 1).join("/")}/`} class="capitalize opacity-70">
              {breadcrumb}
            </a>
            <span aria-hidden="true">&raquo;</span>
          </li>
        )
      )
    }
  </ul>
</nav>
