---
import { getCollection } from "astro:content";
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import LinkButton from "@/components/LinkButton.astro";
import Card from "@/components/Card.astro";
import Hr from "@/components/Hr.astro";
import getSortedPosts from "@/utils/getSortedPosts";
import IconArrowRight from "@/assets/icons/IconArrowRight.svg";
import { SITE } from "@/config";

const posts = await getCollection("blog");

const sortedPosts = getSortedPosts(posts);
const featuredPosts = sortedPosts.filter(({ data }) => data.featured);
const recentPosts = sortedPosts.filter(({ data }) => !data.featured);
---

<Layout title={`Blog | ${SITE.title}`}>
  <Header />
  <main id="main-content" data-layout="blog" class="mx-auto w-full max-w-app px-4">
    <nav class="pt-8 pb-4">
      <ul class="flex gap-4">
        <li>
          <a href="/blog/posts/" class="hover:text-accent">Posts</a>
        </li>
        <li>
          <a href="/blog/tags/" class="hover:text-accent">Tags</a>
        </li>
        <li>
          <a href="/blog/archives/" class="hover:text-accent">Archives</a>
        </li>
      </ul>
    </nav>

    {
      featuredPosts.length > 0 && (
        <>
          <section id="featured" class="pt-12 pb-6">
            <h2 class="text-2xl font-semibold tracking-wide">Featured</h2>
            <ul>
              {featuredPosts.map(data => (
                <Card variant="h3" {...data} />
              ))}
            </ul>
          </section>
          {recentPosts.length > 0 && <Hr />}
        </>
      )
    }

    {
      recentPosts.length > 0 && (
        <section id="recent-posts" class="pt-12 pb-6">
          <h2 class="text-2xl font-semibold tracking-wide">Recent Posts</h2>
          <ul>
            {recentPosts.map(
              (data, index) =>
                index < SITE.postPerIndex && <Card variant="h3" {...data} />
            )}
          </ul>
        </section>
      )
    }

    <div class="my-8 text-center">
      <LinkButton href="/blog/posts/">
        All Posts
        <IconArrowRight class="inline-block rtl:-rotate-180" />
      </LinkButton>
    </div>
  </main>
  <Footer />
</Layout>

<script>
  document.addEventListener("astro:page-load", () => {
    const blogLayout = (document.querySelector("#main-content") as HTMLElement)
      ?.dataset?.layout;
    if (blogLayout === "blog") {
      sessionStorage.setItem("backUrl", "/blog");
    }
  });
</script>
